@model HomeDetailsViewModel
@{
	ViewBag.Title = "Employee Details";
	var photoPath = "~/images/" + (Model.EmployeeVM.PhotoPath ?? "noimage.png");
}
<div class="row justify-content-center m-3">
	<div class="col-sm-8">
		<div class="card">
			<div class="card-header">
				<h1>@Model.EmployeeVM.Name</h1>
				</div>
			<div class="card-body text-center">
				<img class="card-img-top" src="@photoPath" asp-append-version=true/>
				<h4>Employee ID : @Model.EmployeeVM.Id</h4>
				<h4>Email : @Model.EmployeeVM.Email</h4>
				<h4>Department : @Model.EmployeeVM.Department</h4>
				</div>
			<div class="card-footer text-center">
				<a asp-controller="home" asp-action="index" class ="btn btn-primary">Back</a>
				<a asp-controller="home" asp-action="edit" asp-route-id="@Model.EmployeeVM.Id" 
					class="btn btn-primary">Edit</a>
				<a href="#" class="btn btn-danger">Delete</a>
				</div>
		</div>
	</div>
</div>
@section Scripts {
	<script src="~/js/customscript.js"></script>
}