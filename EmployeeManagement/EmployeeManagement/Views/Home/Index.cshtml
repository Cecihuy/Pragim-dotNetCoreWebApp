@model IEnumerable<Employee>
@{
    ViewBag.Title = "Employee List";
}
<div class="row">   
    @foreach(Employee employee in Model) {
        var photoPath = "~/images/" + (employee.PhotoPath ?? "noimage.png");
        <div class="card m-3" style="min-width:18rem; max-width:30%;">
            <div class="card-header">
                <h3>@employee.Name</h3>
                </div>
            <img class="card-img-top imageTumbnail" src="@photoPath" asp-append-version=true />
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id"
                    class="btn btn-primary m-1">View</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
                </div>
        </div>
    }
</div>