@model EmployeeManagement.ViewModels.EmployeeEditViewModel
@{
	ViewBag.Title = "Edit Employee";
	var photoPath = "~/images/" + (Model.ExistingPhotoPath ?? "noimage.png");
}
<form enctype="multipart/form-data" asp-controller="home" asp-action="edit" method="post" class="mt-3">
	<input hidden asp-for="Id" />
	<input hidden asp-for="ExistingPhotoPath" />
	<div class="row">
		<label asp-for="Name" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="Name" class="form-control" placeholder="Name" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
	</div>
	<div class="row">
		<label asp-for="Email" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="Email" class="form-control" placeholder="Email" />
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
	</div>
	<div class="row">
		<label asp-for="Department" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<select asp-for="Department" class="form-select"
					asp-items="Html.GetEnumSelectList<Dept>()">
				<option value="">Please Select</option>
			</select>
			<span asp-validation-for="Department" class="text-danger"></span>
		</div>
	</div>
	<div class="row">
		<label asp-for="Photos" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input multiple asp-for="Photos" class="form-select" />
			@* <label class="form-select">Choose</label> *@
		</div>
	</div>
	<div class="row col-sm-4 offset-4">
		<img src="@photoPath" class="imageTumbnail" asp-append-version=true />
	</div>
	<div asp-validation-summary="All" class="text-danger"></div>
	<div>
		<button class="btn btn-primary" type="Submit">Update</button>
		<a asp-controller="home" asp-action="index" class="btn btn-primary">Cancel</a>
	</div>
</form>
